@import 'common.styl';

body {
    padding: 0;

    .page-icon {
        padding: 10%;
    }
}

.container {
    width: 100%;
    height: 40%;
    position: absolute;
    top: 0;
    bottom: 0;
    text-align: center;
    margin: auto;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: flex-start;

    .icon {
        text-align: center;
        width: 150px;
        height: 150px;
    }

    .content {
        margin: 10% 5%;
    }
}

#icon-failure {
    display: block;
    cursor: auto;
    svg {
        fill: #dd5145;
        width: 150px;
        height: 150px;
        :hover{
            fill: #dd5145;
        }
    }
}