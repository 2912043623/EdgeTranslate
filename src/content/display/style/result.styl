@import 'common.styl';

#edge-translate-panel{
	height: 100%;    
    // background-color: white;
    position: fixed;
    top: 0;
    border: none;
    box-sizing: border-box;
    // box-shadow: 0px 0px 50px rgb(200,200,200,0.5);
    z-index: 10000000;
    // transition: left 300ms;
    // transition: right 300ms;
	overflow-y: scroll;
    display: block;
}

/**
 * start content style
 */
.translate {
	font-weight: medium;
	font-size: medium;
    position: relative;

	.content-title { // 标题样式
		color: gray;
		font-size: larger;
	}

	ul, .list li {
		list-style-type: none;
	}

	.main-meaning {
		margin-right: 1em;

		.main-meaning-content-larger {
			font-size: 30px;
			margin-bottom: 1%;
		}

		.main-meaning-content-large {
			font-size: large;
			margin-bottom: 1%;
		}

		.main-meaning-content-small {
			font-size: medium;
			margin-bottom: 1%;
		}

		.main-meaning-content-smaller {
			font-size: small;
			margin-bottom: 1%;
		}
	}

	.target-phonetic-symbol {

		.target-phonetic-symbol-large {
			font-size: large;
			margin-top: 1%;
		}

		.target-phonetic-symbol-medium {
			font-size: medium;
			margin-top: 1%;
		}

		.target-phonetic-symbol-small {
			font-size: small;
			margin-top: 1%;
		}
	}

	.phonetic-symbol {
		.phonetic-symbol-content {
			font-weight: lighter;
			position: relative;
			left: 12%;
		}
	}

	.common-meanings {
		.common-meanings-content {
			@extend .translate .phonetic-symbol .phonetic-symbol-content;
		}
	}

	.detailed-meanings {
		.word-type {
			color: gray;
			margin-left: 10%;
		}

		.content {
			display: block;
			margin-left: 15%;
			font-weight: light;
		}
	}

	.definitions {
		@extend .translate .detailed-meanings;

		.definitions-content {
			display: block;
			margin-left: 5%;
			font-weight: light;
		}
	}

	.synonyms {
		@extend .translate .detailed-meanings;
	}

	.phrases {
		.phrases {
			@extend .translate .phonetic-symbol .phonetic-symbol-content;
		}
	}

	.examples {
		.sentences {
			font-weight: light;
		}
	}
}

/**
 * end content style
 */